    "test": "echo \"Error: no test specified\" && exit 1",
    "frontend": "npm start --prefix frontend",
    "backend": "nodemon backend/dist/server.js",
    "concurrently": "concurrently \"npm run backend\" \"npm run frontend\""
  },
  "author": "Henry Kiame",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "concurrently": "^8.2.1"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
